swiper {
  width: 100%;
  height: 340rpx;
}

swiper image {
  display: block;
  width: 100%;
  height: 100%;
}

.items-list {
  width: 100%;
  height: 100%;
}

.pro-item {
  overflow: hidden;
  padding: 30rpx;
}

.pro-logo {
  float: left;
  padding-right: 30rpx;
  width: 190rpx;
  height: 190rpx;
}

.pro-body {
  width: 50%;
  margin-left: 200rpx;
}

.pro-title {
  color: #444;
  font-size: 44rpx;
  margin-top: 30rpx;
  line-height: 1;
}
.pro-desc{
  color: #888;
  font-size: 24rpx;
  margin-top: 10rpx;
  line-height: 1;
}

.pro-footer {
  overflow: hidden;
}

.pro-detail {
  float: left;
  width: 190rpx;
  height: 45rpx;
}

.pro-other {
  float: right;
  margin-top: 1rpx;
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: lightcoral;
}




